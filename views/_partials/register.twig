<form id="registerCreateForm" action="{{ path_for('admin.store.register') }}" method="post">
    <div class="ed-container">
        <div class="ed-item s-100">
            <div class="form-group">
                <label for="curso">CÃ³digo del curso</label>
                <input type="number" name="curso" placeholder="ej: 10101000" class="form-control">
            </div>
            <div class="form-group">
                <label for="usuario">usuario</label>
                <input name="usuario" type="text" class="form-control" placeholder="ej: usuario@dominio.edu.co">
