<form id="userCreateForm" action="{{ path_for('admin.students.store') }}" method="post">
    <div class="ed-container">
        <div class="ed-item s-100 l-50">
            <div class="form-group">
                <label for="exampleInputEmail1">Usuario</label>
                <input name="usuario" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }} >
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Nombres</label>
                <input name="nombres" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Apellidos</label>
                <input name="apellidos" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Documento</label>
                <input name="documento" type="number" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="institucion">Institucion</label>
                {% if getP(modulo_campus) == 3  %}
                    {% if auth.user.id_institucion != "05" %}
                        <input name="institucion" type="text" class="form-control" value="{{ getInstitution(auth.user.id_institucion) }}" readonly>
                    {% else %}
                        <select name="institucion" id="institucion" class="form-control">
                            {% for institucion in instituciones %}
                                <option value="{{ institucion.nombre }}">{{ institucion.nombre }}</option>
                            {% endfor %}
                        </select>
                    {% endif %}
                {% else %}
                    <input name="institucion" type="text" class="form-control" readonly value="{{ getInstitution(auth.user.id_institucion) }}" >
                {% endif %}
            </div>
            <div class="form-group">
                <label for="genero">Genero</label>
                <select name="genero" id="genero" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
                    <option value="F">Femenino</option>
                    <option value="M">Masculino</option>
                </select>
            </div>
        </div>
        <div class="ed-item s-100 l-50">
            <div class="form-group">
                <label for="exampleInputEmail1">Pais</label>
                <input name="pais" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Departamento</label>
                <input name="departamento" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ciudad</label>
                <input name="ciudad" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Telefono</label>
                <input name="telefono" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Celular</label>
                <input name="celular" type="number" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Direccion</label>
                <input name="direccion" type="text" class="form-control" {{ getP(modulo_campus) == 3 ? '' : 'readonly' }}>
            </div>
            {% if getP(modulo_campus) == 3  %}
                <button type="submit" class="btn btn-primary">Guardar</button>
            {% endif %}

        </div>
    </div>
</form>