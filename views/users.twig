{% extends "template/template.twig" %}
{% block styles %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
{% endblock %}
{% block content %}
<div class="ed-container full">
    <div class="ed-item s-100 l-offset-15 l-70">
        <h2 class="text-left text-info">Módulo estudiantes</h2>
    </div>
    <div class="ed-item s-100">
        <button class="btn btn-primary" data-toggle="modal" data-target="#userCreateModal"><i class="icon icon-plus-circle"></i> Agregar estudiante</button>  -  <button class="btn btn-success" data-toggle="modal" data-target="#userExcelModal"> <i class="icon icon-file-text-o"></i> Cargar archivo con usuarios</button>
        <br>
    </div>
    <div class="ed-item s-100">
        <table id="tb_user" class="display">
            <thead>
                <tr>
                    <th>A:</th>
                    <th> {{ "Usuario" | title }}</th>
                    {% if auth.isAdmin %}
                    <th> {{ "Clave" | title }}</th>
                    {% endif %}
                    <th> {{ "nombres" | title }}</th>
                    <th> {{ "Apellidos" | title }}</th>
                    <th> {{ "Correo" | title }}</th>
                    <th> {{ "Documento" | title }}</th>
                    <th> {{ "Institucion" | title }}</th>
                    <th> {{ "Genero" | title }}</th>
                    <th> {{ "Ciudad" | title }}</th>
                    <th> {{ "Departamento" | title }}</th>
                    <th> {{ "Pais" | title }}</th>
                    <th> {{ "Telefono" | title }}</th>
                    <th> {{ "Celular" | title }}</th>
                    <th> {{ "Direccion" | title }}</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td> <a href="{{ path_for('admin.users.delete', {id : student.id}) }}" class="studentEliminar pointer"><i class="icon icon-trash text-danger"></i></a></td>
                    <td>{{student.usuario | trim }}</td>
                    {% if auth.isAdmin %}
                    <td>{{student.clave}} </td>
                    {% endif %}
                    <td>{{student.nombres | trim | title }}</td>
                    <td>{{student.apellidos | trim | title }}</td>
                    <td>{{student.correo | trim }}</td>
                    <td>{{student.documento | trim | title }}</td>
                    <td>{{student.institucion | trim | title }}</td>
                    <td>{{student.genero | trim | title }}</td>
                    <td>{{student.ciudad | trim | title }}</td>
                    <td>{{student.departamento | trim | title }}</td>
                    <td>{{student.pais | trim | title }}</td>
                    <td>{{student.telefono | trim | title }}</td>
                    <td>{{student.celular | trim | title }}</td>
                    <td>{{student.direccion | trim | title }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
{% block modales %}

<div class="modal fade bd-example-modal-lg" id="userCreateModal"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div>
          <h3>Formulario de registro</h3>
        </div>
        <div id="message_form"></div>
        <form id="userCreateForm" action="{{ path_for('admin.users.store') }}">
          <div class="form-group">
            <label for="exampleInputEmail1">Usuario</label>
            <input name="usuario" type="text" class="form-control" >
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Clave</label>
            <input name="clave" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Nombres</label>
            <input name="nombres" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Apellidos</label>
            <input name="apellidos" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Correo</label>
            <input name="correo" type="email" class="form-control" placeholder="usuario@institucion.edu.co">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Documento</label>
            <input name="documento" type="number" class="form-control">
          </div>
          <div class="form-group">
            <label for="institucion">Institucion</label>
            {% if auth.isAdmin == false %}
              <input name="institucion" type="text" class="form-control" value="{{ auth.user.institution.nombre }}" readonly >
            {% else %}
              <select name="institucion" id="institucion" class="form-control">
                <option value="Institución Universitaria Pascual Bravo">Institución Universitaria Pascual Bravo</option>
                <option value="Institución Universitaria Colegio Mayor de Antioquia">Institución Universitaria Colegio Mayor de Antioquia</option>
                <option value="Institución Universitaria ITM">Institución Universitaria ITM</option>
                <option value="Ruta N">Ruta N</option>
                <option value="@Medellín">@Medellín</option>
              </select>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="genero">Genero</label>
            <select name="genero" id="genero" class="form-control">
              <option value="F">Femenino</option>
              <option value="M">Masculino</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Ciudad</label>
            <input name="ciudad" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Departamento</label>
            <input name="departamento" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Pais</label>
            <input name="pais" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Telefono</label>
            <input name="telefono" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Celular</label>
            <input name="celular" type="number" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Direccion</label>
            <input name="direccion" type="text" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
  </div>
</div>

{% endblock %}
{% block script %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
<script>
var getUri = "http://"+window.location.host;
var table = $('table').DataTable({
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por pagina",
            "zeroRecords": "No hay resultados",
            "info": "Pagina _PAGE_ de _PAGES_",
            "infoEmpty": "No registros disponible",
            "infoFiltered": "(Busqueda de _MAX_ total registros)",
            "processing": "Procesando...",
            "search": "Buscar:",
            "loadingRecords": "Cargando...",
            "next" : "Siguiente",
            "paginate": {
                "first":      "Primera",
                "last":       "Ultima",
                "next":       "Siguiente",
                "previous":   "Anterior"
            },
        }
    });
$("#userCreateForm").on( "submit", function( event ) {
  event.preventDefault();
  var userForm = $(this).serialize();
  $.post(getUri + $(this).attr('action'), userForm).done( function(response){
    if (response == 1){
      toastr.success('Estudiante resgistrado correctamente.', 'Estupendo!!!', {timeOut: 3000});
    } else {
      console.log('1');
    }
  }).
  fail(function(response){
    toastr.error('Servicio no disponible intentalo luego.', 'Error!!', {timeOut: 3000});
  });

});
$("#tb_user").on('click', '.studentEliminar', function(event) {
    event.preventDefault();
    var _this = $(this);
    $.get(_this.attr('href')).done( function(response){
    if (response == 1){
      toastr.success('Estudiante eliminado correctamente.', 'Estupendo!!!', {timeOut: 3000});
      table
        .row( _this.parents('tr') )
        .remove()
        .draw();    }
  }).
  fail(function(response){
    toastr.error('Servicio no disponible intentalo luego.', 'Error!!', {timeOut: 3000});
  });
});
</script>
{% endblock %}