{% extends "template/template.twig" %}
{% block styles %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.css"/>
<style>
  @media (min-width: 992px){
    .modal-lg {
      max-width: 1075px;
    }
  }
</style>
{% endblock %}
{% block content %}
<div class="ed-container full">
    <div class="ed-item s-100 l-offset-15 l-70">
        <br>
        <h2 class="text-left text-info">Usuarios @Monitor</h2>
    </div>
    <div class="separator"></div>
    <div class="ed-item s-100">
        <button class="btn btn-primary addstudent" data-href="{{ path_for('admin.users.store') }}"><i class="icon icon-plus-circle"></i> Agregar usuario</button>
    </div>

    <div class="ed-item s-100">
    <br>
        <table id="tb_user" class="display">
            <thead>
                <tr>
                    <th>ID:</th>
                    <th> {{ "Usuario" | title }}</th>
                    <th> {{ "nombres" | title }}</th>
                    <th> {{ "Apellidos" | title }}</th>
                    <th> {{ "Documento" | title }}</th>
                    <th> {{ "Institución" | title }}</th>
                    <th> {{ "Acciones" | title }}</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
{% block modales %}
{% include "formularios/user.twig" %}
{% include "formularios/permission.twig" %}
{% endblock %}
{% block scripts %}
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
<script>
var getUri = "http://"+window.location.host;
const roles = ['Super Administrador', 'Administrador', 'Super Moderador', 'Moderador', 'Super Normal', 'Normal'];
const institutions = ['Institución Universitaria Pascual Bravo', 'Institución Universitaria Colegio Mayor de Antioquia', 'Institución Universitaria ITM', 'Ruta N', '@Medellín'];
var _td = null;
var table = $('#tb_user').DataTable({
        lengthMenu: [ 25, 50, 75, 100 ],
        language: {
            "lengthMenu": "Mostrar _MENU_ registros por pagina",
            "zeroRecords": "No hay resultados",
            "info": "Pagina _PAGE_ de _PAGES_",
            "infoEmpty": "No registros disponible",
            "infoFiltered": "(Busqueda de _MAX_ total registros)",
            "processing": "Procesando...",
            "search": "Buscar:",
            "loadingRecords": "Cargando...",
            "next" : "Siguiente",
            "paginate": {
                "first":      "Primera",
                "last":       "Ultima",
                "next":       "Siguiente",
                "previous":   "Anterior"
            },
        },
        ajax: {
            url: getUri + '/panel/users/all',
            dataSrc: ''
        },
        columns: [
            { data: 'id' },
            { data: 'usuario' },
            { data: 'nombres' },
            { data: 'apellidos' },
            { data: 'documento' },
            { "data": 'id_institucion',
                "render" : function(data, type, row, meta) {

                    return ""+institutions[data.substr(1,1)-1]+"";
                }
            },
            {% if getPermission(modulo_plataforma, auth.user.id) == 3  %}
            { "data": "id",
                "render": function (data, type, row, meta) {
                    return '<a data-toggle="tooltip" title="Permisos"  href="'+getUri+'/panel/users/permission/view/'+data+'" class="userPermission pointer icon_a"><i class="fa fa-lock text-success"></i></a>&nbsp;<a data-toggle="tooltip" title="Eliminar" href="'+getUri+'/panel/users/delete/'+data+'" class="userEliminar pointer icon_a delete_tooltip"><i class="fa fa-trash text-danger"></i></a>&nbsp;<a data-toggle="tooltip" title="Actualizar" href="'+getUri+'/panel/users/show/'+data+'" class="userShow pointer icon_a" data-href="{{ path_for("admin.users.update", {id: id}) }}"><i class="fa fa-pencil text-sucess"></i></a>';
                }
            }
            {% else %}
            { "data": "id",
                "render": function (data, type, row, meta) {
                    return '<a data-toggle="tooltip" title="Permisos" href="'+getUri+'/panel/users/permission/view/'+data+'" class="userPermission pointer icon_a"><i class="fa fa-lock text-success"></i></a>';
                }
            }
            {% endif %}
          ]
    });
</script>
<script src="{{ base_url }}/js/function.js"></script>
<script src="{{ base_url }}/js/modules/user.js"></script>
{% endblock %}